[alias]
  a = add
  ap = add -p
  b = branch
  c = commit -v
  ca = commit --amend
  cm = commit -vm
  caf = "!git commit --amend --no-edit; git push --force-with-lease"
  o = checkout
  d = diff
  fp = fetch -p
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev --date=relative
  pl = pull
  pu = push
  puf = push --force-with-lease
  rbm = rebase master
  rbc = rebase --continue
  s = status
  sp = stash pop
  st = stash
  sa = submodule add
  wa = worktree add
  wr = worktree remove
  wl = worktree list

[commit]
  template = ~/.config/git/message-template

[push]
  default = simple

[user]
  name = Brian Di Palma
