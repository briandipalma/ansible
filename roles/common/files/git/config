[pull]
  ff = only

[diff]
  colorMoved = default
  algorithm = patience

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  features = side-by-side line-numbers decorations
  syntax-theme = Solarized (light)
  navigate = true
